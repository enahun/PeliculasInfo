<p id="notice"><%= notice %></p>

<h3>Ingresa tus peliculas favoritas</h3>

<table class="striped">
  <thead>
    <tr>
      <th>Pelicula</th>
      <th>Director</th>
      <th>Genero</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
    <div class="row">
      <div class="col s3">

         <tr>
        <td><%= info.pelicula %></td>
        <td><%= info.director %></td>
        <td><%= info.genero %></td>
        <td><%= info.usuario %></td>
        <td><%= link_to 'Show', info %></td>
        <td><%= link_to 'Edit', edit_info_path(info) %></td>
        <td><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>


      </div>
      
    </div>
          
     
    <% end %>
  </tbody>
</table>

<br>

